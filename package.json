{
    "name": "offchain-oracle",
    "version": "0.0.1",
    "description": "Oracle for querying weighted average of dex prcies",
    "repository": {
        "type": "git",
        "url": "git@github.com:1inch-exchange/offchain-oracle.git"
    },
    "license": "MIT",
    "dependencies": {
        "@openzeppelin/contracts": "3.4.0-solc-0.7"
    },
    "devDependencies": {
        "@eth-optimism/plugins": "^0.0.20",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-truffle5": "^2.0.0",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "@openzeppelin/test-helpers": "^0.5.10",
        "chai": "^4.3.4",
        "dotenv": "^8.2.0",
        "eslint": "^7.22.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-standard": "^5.0.0",
        "hardhat": "^2.1.2",
        "hardhat-deploy": "0.7.0-beta.50",
        "hardhat-gas-reporter": "^1.0.4",
        "rimraf": "^3.0.2",
        "solc": "^0.7.6",
        "solhint": "^3.3.4",
        "solidity-coverage": "^0.7.16"
    },
    "scripts": {
        "test": "hardhat test --show-stack-traces",
        "clean": "rimraf artifacts cache coverage",
        "deploy": "hardhat deploy --network",
        "deploy:ovm": "hardhat --config hardhat-ovm.config.js deploy --network",
        "coverage": "hardhat coverage",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint . --fix",
        "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
        "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
        "lint": "yarn lint:js && yarn lint:sol",
        "lint:fix": "yarn lint:js:fix && yarn lint:sol:fix"
    }
}
